---
interface Props {
  type?: string;
  action: string;
  text: string;
  icon?: string;
  className?: string;
}

const { type = "button", action, text = "Learn more", className = "btn--action", icon = "abstract" } = Astro.props;
---

<button
  type={type}
  data-target-action={action}
  class:list={['btn', className]}
>
  { icon && <i class={'gg-' + icon}></i> }

  { text }
</button>