---
import type { CallToAction } from '../../interfaces';
import CallToActionList from '../CallToActionList.astro';
import CopyMap from '../CopyMap.astro';
import IconBtn from '../IconBtn.astro';

interface Props {
  heading?: string | null;
  copy: Array<string>;
  ctas?: Array<CallToAction> | null;
}

const { heading, copy, ctas } = Astro.props;
---

<dialog class="modal modal--text">
  <form method="dialog">
    <IconBtn icon='close' />
  </form>

  <article>
    { heading && <h2>{ heading }</h2> }

    <CopyMap copy={ copy } />

    { ctas && <CallToActionList ctas={ ctas } /> }
  </article>
</dialog>