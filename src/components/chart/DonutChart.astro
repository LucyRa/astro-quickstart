---
interface Props {
  name: string;
  dataSrc?: string;
}

const { name = "test", dataSrc } = Astro.props;
---

<div
  id={ `donut-chart-${name}` }
  class="chart chart--donut"
  data-chart-donut
></div>

<script>
  import { Donut } from "../../scripts/charts/donut"

  const donutChart = new Donut()
  donutChart.init()
</script>

<style>
  .chart--donut {
    width: 500px;
  }
</style>