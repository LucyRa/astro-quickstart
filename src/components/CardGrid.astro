---
import { getCollection } from 'astro:content';
import Card from './Card.astro';

interface Props {
  collectionName: string;
}

const { collectionName = "services" } = Astro.props;
const entries = await getCollection(`${collectionName}`)
---

<ul class="card-grid">
  { entries.map(entry => {
    <Card entry={ entry } />
  }) }
</ul>